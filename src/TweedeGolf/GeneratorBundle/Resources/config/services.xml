<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="tweedegolf_generator.generator_registry.class">TweedeGolf\GeneratorBundle\Generator\Registry\GeneratorRegistry</parameter>
        <parameter key="tweedegolf_generator.generator.bundle.class">TweedeGolf\GeneratorBundle\Generator\BundleGenerator</parameter>
        <parameter key="tweedegolf_generator.builder_registry.class">TweedeGolf\GeneratorBundle\Generator\Builder\Registry\BuilderRegistry</parameter>
        <parameter key="tweedegolf_generator.builder.create.class">TweedeGolf\GeneratorBundle\Generator\Builder\Builder</parameter>
        <parameter key="tweedegolf_generator.builder.destroy.class">TweedeGolf\GeneratorBundle\Generator\Builder\RevertingBuilder</parameter>
    </parameters>

    <services>
        <!-- builder registry -->
        <service id="tweedegolf_generator.builder_registry" class="%tweedegolf_generator.builder_registry.class%" />

        <!-- abstract builder -->
        <service id="tweedegolf_generator.builder.abstract" abstract="true">
            <call method="setBasePath">
                <argument>%kernel.root_dir%/..</argument>
            </call>
            <call method="setFilesystem">
                <argument type="service" id="filesystem" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>
        </service>

        <!-- builders -->
        <service id="tweedegolf_generator.builder.create" class="%tweedegolf_generator.builder.create.class%" parent="tweedegolf_generator.builder.abstract">
            <tag name="tweedegolf_generator.builder" type="create" />
        </service>
        <service id="tweedegolf_generator.builder.destroy" class="%tweedegolf_generator.builder.destroy.class%" parent="tweedegolf_generator.builder.abstract">
            <tag name="tweedegolf_generator.builder" type="destroy" />
        </service>

        <!-- generator registry -->
        <service id="tweedegolf_generator.generator_registry" class="%tweedegolf_generator.generator_registry.class%" />

        <!-- abstract generator -->
        <service id="tweedegolf_generator.generator.abstract" abstract="true">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- generators -->
        <service id="tweedegolf_generator.generator.bundle" class="%tweedegolf_generator.generator.bundle.class%" parent="tweedegolf_generator.generator.abstract">
            <call method="setBundle">
                <argument>TweedeGolfGeneratorBundle</argument>
            </call>
            <tag name="tweedegolf_generator.generator" />
        </service>
    </services>
</container>
